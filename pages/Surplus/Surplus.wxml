<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">查询余额</h2>
		
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">姓名</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="请填写员工姓名" name="userName"  placeholder-class="weui-input__placeholder"  bindinput ="userNameInput"/>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                  <label class="weui-label">余额</label>
							</view>
							<view class="weui-cell__bd">
						   	<input class="weui-input" placeholder-class="weui-input__placeholder" name="Surpluus"  disabled="disabled" />
						</view>
					</view>
				</view>
			</view>

		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="myclick">确定</a>
		</view>

		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__links">
					<a href="javascript:" class="weui-footer__link">缠运城把有限公司</a>
				</view>
				<view class="weui-footer__text">2021-02-05</view>
			</view>
		</view>
	</view>
</view>
